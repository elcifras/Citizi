<%= simple_form_for [service, booking]  do |f| %>
    <%= f.input :occurs_on,
              as: :string,
              input_html: { data: { controller: "datepicker", action: "change->search#senddate"  } } %>
    <% if timeslots.present? %>
      <%= render "timeslots", f: f, timeslots: timeslots %>
      <% end %>
    <%= f.button :submit, "Book Now", class: "button-1" %>
  <% end %>
