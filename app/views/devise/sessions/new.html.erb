<div class="banner" id="spanish-patio" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path('citizi_login.jpg')%>)">
    <h2><strong>Welcome back</strong></h2>
  </div>
<div class="card-login">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, label: 'Email address',
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,label: 'Password',
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      <%= f.button :submit, "Log in", class: "button-2-log-in" %>
    </div>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class:"a-psw" %><br />

    </div>
    <div class="divider-log-in">
      <p class="p-or">  or  </p>
    </div>
    <div class="buttons">
    <div class="form-actions">
    <p class="p-sign-up">Don't have an account yet?</p>
        <%= link_to "Sign up", new_registration_path(resource_name) %><br />
    <% end %>
   </div>
   </div>
