<div class="banner" id="spanish-patio" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path('citizi_login.jpg')%>)">
    <h2><strong>Welcome back</strong></h2>
  </div>
<div class="card-login">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    </div>
    <div class="buttons">
    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "button-1" %>
    </div>
    <%= render "devise/shared/links" %>
    <% end %>
   </div>
