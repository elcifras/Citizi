<div class="container">
  <img src="<%= asset_path('spanish-patio.jpg') %>" alt="Spanish patio" class="spanish-patio">
  <h2 class="mt-3">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs mt-3">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "form-input" }
                 %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "form-input" }
                 %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class:"btn-primary mb-3" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
