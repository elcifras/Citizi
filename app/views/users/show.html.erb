<% content_for :navbar_title do %>
 <h1>My Profile</h1>
<% end %>

<div class="container">
  <div class="card-profile">
    <%= cl_image_tag("THE_IMAGE_ID_FROM_LIBRARY", width: 400, height: 300, crop: :fill) %>%
    <h2><%= @user.name  %></h2>
    
    <%= simple_form_for @user do |f| %>
      <%= f.input :email%>
      <%= f.input :password %>
      <%= f.input :address%>
      <%= f.input :phone_number%>
      <%= f.button :submit %>
    <% end %>
  </div>
</div>
